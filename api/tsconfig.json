{
  "include": ["src"],
  "compilerOptions": {
    "target": "ES2016",
    "moduleResolution": "node16",
    "declaration": true, // generate .d.ts files
    "sourceMap": true, // generate source map
    "outDir": "dist", // output compiled js, d.ts, and source map to dist folder
    "strict": true,
    "esModuleInterop": true
  }
}